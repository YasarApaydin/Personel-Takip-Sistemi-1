
@{ViewData["Title"] = "Admin Kullanici Yönetim Paneli";
}

@section AdminKullaniciYonetimStyles {
    <link rel="stylesheet" href="~/css/Admin_KullaniciYonetimi.css">
}
<!-- Sabit Üst Kısım -->
<nav class="navbar">
    <ul>
        <li><a href="#add-user">Yeni Kullanıcı Ekle</a></li>
        <li><a href="#user-list">Kullanıcı Listesi</a></li>
        <li><a href="#role-management">Rol Yönetimi</a></li>
    </ul>
</nav>

<div class="user-management">
    <h1>Kullanıcı Yönetimi</h1>

    <!-- Yeni Kullanıcı Ekleme Formu -->
    <section class="add-user" id="add-user">
        <h2>Yeni Kullanıcı Ekle</h2>
        <form id="add-user-form">
            <input type="text" placeholder="Ad Soyad" required>
            <input type="email" placeholder="E-posta" required>
            <input type="password" placeholder="Şifre" required>
            <select>
                <option value="admin">Admin</option>
                <option value="personel">Personel</option>
            </select>
            <button type="submit">Kullanıcı Ekle</button>
        </form>
    </section>

    <!-- Kullanıcı Listesi -->
    <section class="user-list" id="user-list">
        <h2>Mevcut Kullanıcılar</h2>
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Ad Soyad</th>
                    <th>E-posta</th>
                    <th>Rol</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>1</td>
                    <td>Ahmet Yılmaz</td>
                    <td>ahmet@example.com</td>
                    <td>Admin</td>
                    <td>
                        <button class="edit-btn">Düzenle</button>
                        <button class="delete-btn">Sil</button>
                    </td>
                </tr>
                <tr>
                    <td>2</td>
                    <td>Ayşe Kaya</td>
                    <td>ayse@example.com</td>
                    <td>Personel</td>
                    <td>
                        <button class="edit-btn">Düzenle</button>
                        <button class="delete-btn">Sil</button>
                    </td>
                </tr>
            </tbody>
        </table>
    </section>

    <!-- Rol Yönetimi -->
    <section class="role-management" id="role-management">
        <h2>Rol Yönetimi</h2>
        <div class="roles">
            <div class="role">
                <span>Admin</span>
                <button class="delete-role">Sil</button>
            </div>
            <div class="role">
                <span>Personel</span>
                <button class="delete-role">Sil</button>
            </div>
        </div>
        <form id="add-role-form">
            <input type="text" placeholder="Yeni Rol Adı" required>
            <button type="submit">Rol Ekle</button>
        </form>
    </section>
</div>