@{
    ViewData["Title"] = "Personel Yönetimi";
}

@section Yonetici1Style {
    <link rel="stylesheet" href="~/css/Yonetici.css">
}

@model List<PersonelYoneticiViewModel>



@if (TempData["Basari"] != null)
{
    <div class="alert alert-success">@TempData["Basari"]</div>
}
@if (TempData["Hata"] != null)
{
    <div class="alert alert-danger">@TempData["Hata"]</div>
}

<header>
    <div class="nav-left">
        <a asp-action="Anasayfa" asp-controller="Home">Anasayfa</a>
    </div>
    <div class="nav-right">
        <span class="username">Merhaba, <strong>@ViewData["UserFullName"]</strong></span>
        <form asp-action="Logout" asp-controller="Yonetici" method="post" style="display:inline;">
            <button type="submit" class="btn logout-btn">Çıkış</button>
        </form>
    </div>
</header>

<nav>
    <ul>
        <li><a asp-controller="Yonetici" asp-action="PersonelBilgi">Giriş-Çıkış Bilgileri</a></li>
        <li class="active"><a asp-controller="Yonetici" asp-action="Yonetici">Personel Yönetimi</a></li>
        <li><a asp-controller="Yonetici" asp-action="Camera">Kamera</a></li>
    </ul>
</nav>

<main>
    <div class="container">

        <div class="header-container">
            <h3>Personel Yönetimi</h3>
            <a class="btn add-personnel" asp-controller="Yonetici" asp-action="Add">+ Yeni Personel Ekle</a>

        </div>

        <div class="filters">
            <input type="text" placeholder="Id" id="filterId">
            <input type="text" placeholder="Ad" id="filterFirstName">
            <input type="text" placeholder="Soyad" id="filterLastName">
            <input type="email" placeholder="Email" id="filterEmail">
            <input type="text" placeholder="Departman" id="filterDepartment">
            <button class="filter-btn" onclick="applyFilter()">Ara</button>
        </div>

        <div class="table-container">
            <table>
                <thead>
                    <tr>
                        <th>Sıra</th>
                        <th>Ad</th>
                        <th>Soyad</th>
                        <th>Email</th>
                        <th>Eylem</th>
                    </tr>
                </thead>
                <tbody id="personnelTable">
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <tr data-id="@Model[i].Id">
                            <td>@(i + 1)</td>
                            <td>@Model[i].Ad</td>
                            <td>@Model[i].Soyad</td>
                            <td>@Model[i].Email</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@Model[i].Id" class="btn btn-warning btn-sm">Düzenle</a>
                               
                                <button class="delete" onclick="openDeleteModal(this)"><i class="fas fa-trash"></i></button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</main>



<form id="deleteForm" method="post" action="/Yonetici/Delete">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" id="deletePersonId" />

    <div id="deleteConfirmModal" style="display:none; position:fixed; top:0; left:0;
     width:100%; height:100%; background:rgba(0,0,0,0.5); justify-content:center; align-items:center;">
        <div style="background:white; padding:20px; border-radius:5px; max-width:400px; width:90%;">
            <p>Bu kullanıcıyı silmek istediğinize emin misiniz?</p>
            <p id="deletePersonName" style="font-weight:bold;"></p>
            <button type="submit">Evet</button>
            <button type="button" onclick="closeDeleteModal()">Hayır</button>
        </div>
    </div>
</form>


<script>
    let deletingRow = null;

    function openDeleteModal(button) {
        deletingRow = button.closest('tr');
        const firstName = deletingRow.cells[1].innerText;
        const lastName = deletingRow.cells[2].innerText;
        const id = deletingRow.getAttribute('data-id');

        document.getElementById('deletePersonName').innerText = `${firstName} ${lastName}`;
        document.getElementById('deletePersonId').value = id;

        document.getElementById('deleteConfirmModal').style.display = 'flex';
    }

    function closeDeleteModal() {
        deletingRow = null;
        document.getElementById('deleteConfirmModal').style.display = 'none';
    }


</script>

<style>
    /* Basit modal stilleri, isteğe göre düzenleyebilirsin */

    .modal {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        background-color: rgba(0,0,0,0.5);
        justify-content: center;
        align-items: center;
        z-index: 1000;
    }

    .modal-content {
        background: white;
        border-radius: 8px;
        padding: 20px;
        box-sizing: border-box;
        max-width: 90%;
        max-height: 90%;
        overflow-y: auto;
        position: relative;
    }

    .close {
        cursor: pointer;
        font-size: 24px;
        font-weight: bold;
    }

    .add-personnel {
        background-color: #4CAF50;
        color: white;
        border: none;
        padding: 8px 15px;
        border-radius: 4px;
        cursor: pointer;
        font-size: 16px;
        margin-bottom: 15px;
    }

        .add-personnel:hover {
            background-color: #45a049;
        }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        padding: 10px;
        border-bottom: 1px solid #ddd;
        text-align: left;
    }

    th {
        background-color: #f2f2f2;
    }

    button.edit, button.delete {
        background: none;
        border: none;
        cursor: pointer;
        font-size: 16px;
        margin: 0 5px;
    }

        button.edit:hover {
            color: #007bff;
        }

        button.delete:hover {
            color: #dc3545;
        }
</style>
